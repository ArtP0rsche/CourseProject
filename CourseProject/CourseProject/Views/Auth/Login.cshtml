@model CourseProject.DataModels.User

@{
    ViewData["Title"] = "Авторизация";
}

<div style="display: flex; align-items: center; justify-content: center; align-content: space-between; min-height: 80vh">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">Имя пользователя</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Пароль</label>
                <input asp-for="Password" class="form-control" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: flex; justify-content: space-between">
                <div>
                    Нет аккаунта? <a asp-controller="Users" asp-action="Create">Зарегистрируйтесь</a>
                </div>
                <input type="submit" value="Войти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

